generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum user_role {
  admin
  trainer
  member
}

model users {
  id             Int           @id @default(autoincrement())
  role           user_role
  username       String        @db.VarChar(100)
  password       String?       @db.VarChar(255)
  email          String        @unique @db.VarChar(100)
  provider       String?       @db.VarChar(20)
  provider_id    String?       @db.VarChar(100)
  avatar         String?
  created_at     DateTime?     @default(now()) @db.Timestamp(6)
  updated_at     DateTime?     @default(now()) @updatedAt @db.Timestamp(6)
  name           String        @db.VarChar(100)
  img_url        String        @default("") 
  phone_no       String?       @unique @db.VarChar(15)
  last_activity  DateTime?     @default(now()) @db.Timestamp(6)
  
  // Hanya sebutkan nama relasi saja
  member       members?        @relation("UserMember")
  member_user  member_user[]
}

model members {
  // Primary key sama dengan id user (foreign key ke users)
  id          Int       @id
  stat1       Int?
  stat2       Int?
  stat3       Int?
  stat4       Int?
  stat5       Int?
  
  // Tentukan properti relasi secara penuh di sini
  user        users     @relation("UserMember", fields: [id], references: [id], onDelete: Cascade)
  member_user member_user[]
}

model member_user {
  u_id    Int
  m_id    Int
  
  users   users   @relation(fields: [u_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  members members @relation(fields: [m_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  
  @@id([u_id, m_id])
}

model events {
  id          Int       @id @default(autoincrement())
  title       String    @default("Event Title") @db.VarChar(50)
  images      String    @default("")
  description String?   @default("Description here") @db.VarChar(200)
  posted_at   DateTime? @default(now()) @db.Timestamp(6)
  joinform    String    @default("https://example.com/join-form") @db.VarChar(200)
}

model liked_by {
  id   Int  @id @default(autoincrement())
  u_id Int       
  e_id Int
}